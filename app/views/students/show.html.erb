
<h1> Student Name: <%= "#{@student.first_name}" %> </h1>
</br>

<div>
<% @infractions.each do |infraction| %>
<ul>
  <li><%= infraction.code %>, <%= infraction.description %></li>
</ul>
<%end  %>


<div>
  <h1>Form for an Incident</h1>
  <%= form_for([@user, @student, @incident]) do |f| %>
    Please select an infraction code
    <!-- infraction code select box with dropdown options -->
    <%= f.select "infraction_id", options_from_collection_for_select(Infraction.all, "id", "code") %></br>
    <%= f.label :comment%>
    <%= f.text_field :comment%><br>
    <%= f.submit %>
    <%= f.hidden_field "student_id", :value => @student.id %>
  <% end %>

</div>